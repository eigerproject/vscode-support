~ include the math stdlib library
include math

class Person
    func Person(name, surname)
        this.name = name
        this.surname = surname
    end

    func Introduction()
        emitln("I am " + this.name + " " + this.surname + "!")
    end

    func Greet(other)
        emitln(this.name + " greeted " + other.name + "!")
    end
end

